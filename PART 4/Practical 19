Rectangle class:
package java_projects;

public class Rectangle {
    double l;
    double b;

    // Parameterized constructor
    public Rectangle(double l, double b) {
        this.l = l;
        this.b = b;
    }

    public double calc_area() {
        return l * b;
    }

    public double calc_peri() {
        return 2 * (l + b);
    }

    public void area() {
        System.out.println("Area: " + calc_area());
    }

    public void perimeter() {
        System.out.println("Perimeter: " + calc_peri());
    }
}

Square:
package java_projects;

public class Square extends Rectangle {
    public Square(double side) {
        super(side, side); // Call the Rectangle constructor with equal sides
    }
}

main file:
package java_projects;

public class mainn {
    public static void main(String[] args) {
        Rectangle r = new Rectangle(55.0, 60); // Use the parameterized constructor
        System.out.println("Rectangle: ");
        r.area();
        r.perimeter();

        Square sq = new Square(4.0);
        System.out.println();
        System.out.println("Square: ");
        sq.area();
        sq.perimeter();

        Rectangle[] rr = new Rectangle[3];
        rr[0] = new Rectangle(44.9, 211.0);
        rr[1] = new Rectangle(51.9, 71.0);
        rr[2] = new Rectangle(54.7, 217);
        System.out.println();
        System.out.println("Array of Rectangles: ");

        for (int i = 0; i < rr.length; i++) {
            System.out.println();
            System.out.println("Rectangle " + (i + 1) + ":");
            rr[i].area();
            rr[i].perimeter();
        }
    }
}
